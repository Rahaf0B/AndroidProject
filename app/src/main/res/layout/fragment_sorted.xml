<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDFFC"
    android:orientation="vertical"
    tools:context=".SortedFragment">

    <RelativeLayout
        android:id="@+id/animationlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDDEFB"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/dollarsignimg"
            android:layout_width="101dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/dollarsignimg"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewdis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:lineSpacingExtra="10sp"
        android:text="     Destination Sorted By Living Costs"
        android:textAlignment="center"
        android:textColor="#C89607"
        android:textSize="25sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageViewcost"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:src="@drawable/travel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="198dp">

        <LinearLayout
            android:id="@+id/linearlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#100C0C" />

            <TextView
                android:id="@+id/Cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#0B0707" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttondes"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#D88350A5"
        android:fontFamily="@font/carter_one"
        android:text="descending order"
        android:textColor="#EDC551"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/buttonsae"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D88350A5"
        android:fontFamily="@font/carter_one"
        android:text="ascending order"
        android:textColor="#EDC551"
        app:cornerRadius="30dp" />

</LinearLayout>